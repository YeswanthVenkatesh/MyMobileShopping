@using MyMobileShopping.Models;

@model CartViewModel

@Styles.Render("~/Content/CheckOutPage.css")


<Script>
    var grandTotal = '@Model.GrandTotal';
</Script>

<h1> Your Cart ( @Model.Products.Count Items)</h1>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model.Products[i].MobileName</td>
                <td>@Model.Products[i].MobilePrice</td>
            </tr>
        }


        <tr>
            <td colspan="2">Sub total</td>
            <td>@Model.SubTotal</td>
        </tr>
        <tr>
            <td colspan="2">Tax</td>
            <td>@Model.Tax</td>
        </tr>
        <tr>
            <td colspan="2">Discount</td>
            <td>@Model.Discount</td>
        </tr>
        <tr>
            <td colspan="2">Total</td>
            <td>@Model.GrandTotal</td>
        </tr>
    </tbody>


</table>
<div class="billing-Options">
    <h3>Mode of Billing</h3>
    <input type="radio" id="creditCard" name="billing-Options" value="card">
    <label for="creditCard">CREDIT CARD</label><br>
    <input type="radio" id="cod" name="billing-Options" value="cod">
    <label for="cod">COD</label><br>
</div>
<div class="checkOut">
    <button type="button" class="btn btn-primary disabled" id="checkOut">CheckOut</button>
</div>
@section scripts{
    <script src="~/Scripts/Cart.js"></script>
}